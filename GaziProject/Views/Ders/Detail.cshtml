@model GaziProject.Models.Lecture


<div class="row">
    <div class="col-md-4">
        <form asp-action="DetailUpdate" method="post">
            @Html.TextBoxFor(m => m.Id, new {@hidden="true"})
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LectureCode" class="control-label">Bölüm Kodu</label>
                <input asp-for="LectureCode" class="form-control" />
                <span asp-validation-for="LectureCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LectureName" class="control-label"> Bölüm Adi</label>
                <input asp-for="LectureName" class="form-control" />
                <span asp-validation-for="LectureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credit" class="control-label">Kredisi</label>
                <input asp-for="Credit" class="form-control" />
                <span asp-validation-for="Credit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
